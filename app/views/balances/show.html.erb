<% title_balance_show @balance.name, "Balances" %>

<div class="flex">
  <div class="m-auto">
    <h2 class="text-3xl py-6">
      Balance Details
    </h2>
  </div>
</div>

<div class="md:px-32 py-4 w-full">
  <div class="shadow overflow-hidden rounded border-b border-gray-200">
    <table class="min-w-full bg-white">
      <thead class="bg-teal-700 text-white">
        <tr>
          <th class="th-styling">
            ID Number
          </th>
          <th class="th-styling">
            Credit Card Name
          </th>
          <th class="th-styling">
            Credit Card Amount
          </th>           
          <th class="th-styling">
            Time Created
          </th>                  
        </tr>
      </thead>
      <tbody class="text-gray-700">
        <tr>
          <td class="td-styling">
            <%= @balance.id %>
          </td>
          <td class="td-styling">
            <%= @balance.name %>
          </td>
          <td class="td-styling">
            <%= number_to_currency(@balance.amount) %>
          </td>
          <td class="td-styling">
            <%= time_ago_in_words @balance.created_at %>
            <%= " ago" %>
          </td>                          
        </tr>
     </tbody>
   </table>
 </div> 
</div>

<div class="flex">
  <div class="m-auto">
    <h3 class="text-2xl py-3">
      Credit Card Notes
    </h3>
  </div>
</div>

<div class="md:px-32 py-2 w-full">   
    <ul>
      <% @balance.notes.each do |note| %>              
        <li class="py-4 hover:text-teal-800"><%= link_to note.name, [@balance, note] %></li><hr />
      <% end %>
    </ul>  

  <button class="main-btn">
    <%= link_to "Add Balances", new_balance_path %>
  </button>
  <button class="main-btn">
    <%= link_to "Add New Note", new_balance_note_path(@balance) %>
  </button>
  <button class="main-btn">
    <%= link_to "View Balances", balances_path %>
  </button>
 </div>