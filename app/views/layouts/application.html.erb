<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title_balance_show) %>
        <%= yield :title_balance_show %>
      <% else %>
        CCB Tracker
      <% end %>
    </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag "icons8-shield-with-a-dollar-sign-96.png"%>

    <%= vite_client_tag %>
    <%= vite_javascript_tag "application" %>    

  </head>

  <body>
    <% flash.each do |key, message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
